<div class="container">
  <div class="row">
    <div class="col-6">
    <%= link_to 'view all tasks', tasks_path, class: 'btn btn-outline-primary' %>

    <h1>Add Edit Task</h1>

    <%= form_for(@task, local: true, class: 'form-group') do |form|%>
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control' %>
      <%= form.label :description %>
      <%= form.text_area :description, class: 'form-control', rows: 3 %>
      <%= form.submit "submit" , class: "btn btn-primary"%>
    <% end %>
    </div>
  </div>
</div>