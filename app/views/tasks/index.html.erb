<div class="container">
  <div class="row">
    <div class="col-9">
    
    <h1>TO-DO app</h1>

    <%= link_to 'New task', new_task_path, class: 'btn btn-outline-primary' %>

    <h2> All Tasks</h2>

      <% @tasks.each do |task| %>
      <div class="card">
        <div class="card-header">
          Priority: High
        </div>
        <div class="card-body">
          <h5 class="card-title">Special title treatment</h5>
          <p class="card-text"><%= task.description %> </p>
          <%= link_to 'show', task_path(task), class: "btn btn-primary" %>
          <%= link_to 'edit', edit_task_path(task), class: "btn btn-primary" %>
          <%= link_to 'destroy', task, method: 'delete', data: {confirm: "Are you sure?"}, class: "btn btn-primary" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>